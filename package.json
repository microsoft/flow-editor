{
  "private": true,
  "repository": {
    "url": "https://github.com/microsoft/react-dag-editor.git"
  },
  "scripts": {
    "lint": "lerna run lint",
    "lintfix": "lerna run lintfix",
    "build": "lerna run build",
    "test": "jest && lerna run test",
    "publish-packages": "lerna publish from-package --yes --no-git-reset",
    "start": "node ./scripts/run-demo.js",
    "updatePackageJson": "node ./scripts/edit-package-json.js",
    "run-demo": "node ./scripts/run-demo.js",
    "build:site": "lerna run build:site",
    "bump": "node ./scripts/bump-version.js",
    "fix-audit": "yarn-audit-fix"
  },
  "devDependencies": {
    "@types/react": "^16.9.0",
    "@types/react-dom": "^16.9.0",
    "@types/react-test-renderer": "^16.9.0",
    "css-loader": "^5.0.0",
    "execa": "^5.0.0",
    "glob": "^7.1.6",
    "glob-array": "^1.0.0",
    "jest": "^27.0.0",
    "lerna": "^4.0.0",
    "prettier": "^2.2.1",
    "prettier-package-json": "^2.0.0",
    "prompts": "^2.4.1",
    "semver": "^7.3.5",
    "yarn-audit-fix": "^6.4.4"
  },
  "workspaces": [
    "packages/*",
    "shared/*"
  ],
  "engines": {
    "node": ">=12.*",
    "yarn": ">=1.12.*"
  },
  "jest": {
    "testMatch": [
      "<rootDir>/test/*.test.js"
    ]
  },
  "resolutions": {
    "lerna/**/meow": "^10.0.0",
    "lerna/**/normalize-url": "^4.5.1",
    "immer": "9.0.6",
    "prismjs": "1.25.0",
    "trim": "1.0.1",
    "@types/react": "16.14.16",
    "@types/react-dom": "16.9.14"
  }
}
